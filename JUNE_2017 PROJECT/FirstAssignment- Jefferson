


// Calculator simulation

package CalculatorAssignment;

import java.util.Scanner;

/**
 *
 * @author Jeffries Pc
 */
public class CalculatorProgram {
    public static void main(String[] args) 
{
                int numb1;
                int numb2;
               


    Scanner input = new Scanner(System.in);

    System.out.println("enter first number");
    numb1 = input.nextInt();

    System.out.println("enter second number");
    numb2 = input.nextInt();

    Scanner operations = new Scanner(System.in);

    System.out.println("enter arithmetic sign");
        String arithmeticsign = operations.next();

    if (arithmeticsign.equals("-"))
    {
        System.out.println("answer =" + (numb1 - numb2));
    }
   else if  (arithmeticsign.equals("+"))
    {
        System.out.println("answer =" + (numb1 + numb2));
    }

  else if (arithmeticsign.equals("*"))
    {
        System.out.println("answer =" + (numb1 * numb2));
    }
   else if (arithmeticsign.equals("/"))
    {
        System.out.println("answer =" + (numb1 / numb2));
    }
   else if (arithmeticsign.equals("%"))
    {
       System.out.println("answer =" + (numb1 % numb2));
    }
   else 
    {
       System.err.println( "E: 501");
    }


}
}
    